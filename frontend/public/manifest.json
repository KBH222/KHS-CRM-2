{
  "name": "KHS Construction & Remodeling CRM",
  "short_name": "KHS CRM",
  "description": "Mobile-first field operations platform for construction professionals. Access jobs, customers, and materials offline in the field.",
  "start_url": "/",
  "scope": "/",
  "id": "/",
  "display": "standalone",
  "display_override": ["standalone", "window-controls-overlay", "minimal-ui"],
  "orientation": "portrait-primary",
  "theme_color": "#1e40af",
  "background_color": "#ffffff",
  "categories": ["business", "productivity", "utilities"],
  "lang": "en-US",
  "dir": "ltr",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "icons": [
    {
      "src": "/vite.svg",
      "sizes": "any",
      "type": "image/svg+xml"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Dashboard view showing active jobs"
    },
    {
      "src": "/screenshots/customer-list.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Customer list with search functionality"
    },
    {
      "src": "/screenshots/materials.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Materials checklist for job site shopping"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Active Jobs",
      "short_name": "Jobs",
      "description": "View all active construction jobs",
      "url": "/jobs?status=active"
    },
    {
      "name": "Add Customer",
      "short_name": "New Customer",
      "description": "Add a new construction customer",
      "url": "/customers/new"
    },
    {
      "name": "Materials List",
      "short_name": "Materials",
      "description": "Check materials for current jobs",
      "url": "/materials"
    },
    {
      "name": "Field Dashboard",
      "short_name": "Field",
      "description": "Field worker dashboard with today's jobs",
      "url": "/dashboard?view=field"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+khscrm",
      "url": "/open?url=%s"
    }
  ]
}