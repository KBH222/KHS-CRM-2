# KHS CRM Backup Service Configuration
# Copy this file to .env and update with your values

# PostgreSQL Database URL from Railway
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@host.railway.app:5432/railway

# Backup schedule (cron format)
# Default: Every 6 hours
# Examples:
#   "0 */6 * * *" - Every 6 hours
#   "0 2 * * *"   - Daily at 2 AM
#   "0 0 * * 0"   - Weekly on Sunday at midnight
#   "*/15 * * * *" - Every 15 minutes (for testing)
BACKUP_SCHEDULE=0 */6 * * *

# Backup directory (optional)
# Default: ./backups
# Use absolute path for custom location
# BACKUP_DIR=C:\Users\YourName\Backups\KHS-CRM

# Maximum number of backups to keep (optional)
# Default: 30
# Older backups will be automatically deleted
MAX_BACKUPS=30

# Enable desktop notifications (optional)
# Default: true
# Set to false to disable notifications
NOTIFICATIONS_ENABLED=true